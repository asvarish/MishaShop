@model CustomerModel
@{
    ViewData["Title"] = "Registration";
}
@section CssFile {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
}
<div class="container col-xl-8">
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">Электронная почта</label>
            <span asp-validation-for="Email" />
            <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Пароль</label>
            <input asp-for="Password" class="form-control" id="exampleInputPassword1">
            <span asp-validation-for="Password" /> 
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            <label for="exampleInputName">Телефон в формате 8XXXXXXXXXX </label>
            <input asp-for="MobilePhone" pattern="8[0-9]{10}" class="form-control" id="exampleInputTel">
            <span asp-validation-for="MobilePhone" />
            @Html.ValidationMessageFor(model => model.MobilePhone)
            <div class="form-group">
                <label for="exampleInputName">Имя</label>
                <input asp-for="FirstName" class="form-control" id="exampleInputName">
                <span asp-validation-for="FirstName" />
            </div>
            <div class="form-group">
                <label for="exampleInputLastname">Фамилия</label>
                <input asp-for="LastName" class="form-control" id="exampleInputLastname">
                <span asp-validation-for="LastName" />
            </div>
        </div>
            <button type="submit" class="btn btn-primary" asp-action="RegisterNewCustomer" asp-controller="Registration">принять</button>
    </form>
</div>
