<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/static/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    @RenderSectionAsync("CssFile", true);
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @RenderSectionAsync("Scripts", false);
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="HomePage" asp-action="Index">No Name Shop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" asp-controller="HomePage" asp-action="Index">Каталог</a>
                <a class="nav-item nav-link" asp-controller="About" asp-action="AboutPage">О нас</a>
                <a class="nav-item nav-link" asp-controller="HomePage" asp-action="Index">Добавить товар</a>
            </div>
        </div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="${_csrf.token}" />
            <button class="btn" type="submit">Выйти</button>
        </form>
        <a class="nav-item nav-link" asp-controller="Account" asp-action="Account">Вход</a>
        <a class="nav-item nav-link" asp-controller="Registration" asp-action="Registration">Регистрация</a>
        <!-- Registration / Login ( anchor )   -->
        <!-- MishaShop About Cataloge Contact-Us       Registration Login -->
    </nav>
    @RenderBody();
</body>
</html>
