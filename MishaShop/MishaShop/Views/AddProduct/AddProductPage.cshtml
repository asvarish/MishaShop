@model FileViewModel
@{
    ViewData["Title"] = "Add";
}

@section CssFile {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
}
    <div class="containter">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-xl-6">
                <form asp-action="AddNewProduct" asp-controller="AddProduct" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Вставьте фотографию</label>
                        <input asp-for="FileData" class="form-control-file" id="exampleFormControlFile1">
                        @Html.ValidationMessageFor(model => model.FileData)
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Добавьте информацию о предмете</label>
                        <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        <span asp-validation-for="Description" />
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Выберите размер одежды</label>
                        <select asp-items="Model.Sizes" asp-for="CustomerChoise" class="form-control" id="exampleFormControlSelect1"></select>
                        @Html.ValidationMessageFor(model => model.CustomerChoise)
                    </div>
                    <div class="form-group">
                        <input asp-for="Price" class="form-control form-control-sm" type="text" placeholder="стоимость">
                        <span asp-validation-for="Price" />
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col">
            </div>
        </div>
    </div>